{
    // needed to ensure "build.bat" opens with CMD instead of PowerShell
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "editor.insertSpaces": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.tabSize": 8,
    "editor.useTabStops": true,
    "editor.rulers": [
        80
    ],
    "[plaintext]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": true
    },
    "[wla-dx-asm]": {
        "editor.tabSize": 8
    },
    "[v80]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": true
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.wordWrap": "wordWrapColumn"
    },
    "[log]": {
        "editor.wordWrap":"bounded"
    },
    "files.exclude": {
        "**/__*" : true,
        "**/*.com" : true,
        "build/*.o" : true
    },
    "search.exclude": {
        "**/*.code-search": true,
        "bin/" : true,
        "build/" : true,
    },
    "files.readonlyInclude": {
        "bin/wla-dx/*" : true,
        "bin/RunCPM/*.exe" : true
    },
    "cSpell.enableFiletypes": [
        "wla-dx-asm"
    ],
    "cSpell.words": [
        "alphanum",
        "Camen",
        "kroc"
    ],
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "wla-dx-asm",
        "markdown",
        "latex",
        "plaintext",
        "wla-dx-asm"
    ],
    "spellright.parserByClass": {
        "wla-dx-asm": {
            "parser": "code"
        }
    },
    "cSpell.allowCompoundWords": true,
    "cSpell.caseSensitive": true,
    "evenbettercomments.tags": [
        {
            "tag": "TODO:",
            "color": "#FF8C00",
            "overline": false,
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },{
            "tag": "FIXME",
            "color": "#FF2D00",
            "overline": false,
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },{
            "tag": "in:",
            "color": "#98C379",
            "overline": false,
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
          },{
            "tag": "out:",
            "color": "#98C379",
            "overline": false,
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
          }
    ],
    "evenbettercomments.highlightTagOnly": true,
    "makefile.configureOnOpen": false
}